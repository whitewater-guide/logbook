{
  "compilerOptions": {
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react",
    "lib": ["esnext"],
    "target": "es2019", // node.js 12 doesn't support nullish coalescing
    "module": "CommonJS",
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "outDir": "dist"
  }
}

{
  "name": "@whitewater-guide/logbook",
  "version": "1.0.0",
  "description": "Logbook api for whitewater-related projects",
  "main": "index.js",
  "repository": "https://github.com/whitewater-guide/logbook",
  "author": "whitewater.guide",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "clean:generated": "find packages -name \"*.generated.ts\" -delete",
    "docker:clean": "docker system prune -af --volumes --filter \"label=project=logbook\"",
    "build": "yarn clean && tsc --project tsconfig.build.json",
    "codegen": "graphql-codegen && sql-ts -c sql-ts.json && eslint --fix src/__generated__/sql.ts",
    "pretest": "./scripts/pretest.sh",
    "test": "NODE_ENV=test jest",
    "lint": "eslint --fix \"src/**\""
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@graphql-codegen/cli": "1.14.0",
    "@graphql-codegen/near-operation-file-preset": "1.14.0",
    "@graphql-codegen/typescript": "1.14.0",
    "@graphql-codegen/typescript-document-nodes": "^1.14.0",
    "@graphql-codegen/typescript-operations": "1.14.0",
    "@rmp135/sql-ts": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "commitlint": "^8.3.5",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "import-sort-parser-typescript": "^6.0.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.2"
  },
  "resolutions": {
    "**/graphql": "^15.0.0"
  }
}

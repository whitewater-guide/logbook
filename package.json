{
  "name": "@whitewater-guide/logbook",
  "version": "1.0.0",
  "description": "Logbook api for whitewater-related projects",
  "main": "index.js",
  "repository": "https://github.com/whitewater-guide/logbook",
  "author": "whitewater.guide",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream",
    "codegen": "lerna run codegen --stream",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream --",
    "docker:clean": "docker system prune -af --volumes --filter \"label=project=logbook\"",
    "lint": "eslint --fix \"**/*.ts\"",
    "release": "lerna publish -y --conventional-commits --no-verify-access"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@graphql-codegen/cli": "1.15.1",
    "@graphql-codegen/near-operation-file-preset": "1.15.1",
    "@graphql-codegen/typescript": "1.15.1",
    "@graphql-codegen/typescript-document-nodes": "^1.14.0",
    "@graphql-codegen/typescript-operations": "1.15.1",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitlint": "^8.3.5",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.2"
  },
  "resolutions": {
    "**/graphql": "^14.6.0"
  }
}
